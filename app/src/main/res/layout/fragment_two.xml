<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TwoFragment"
     >
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/shuaxin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:orientation="vertical"
      >
      <com.heweather.plugin.view.LeftLargeView
          android:id="@+id/ll_view"
          android:layout_width="match_parent"
          android:layout_height="75dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实况天气"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="15dp"
          android:orientation="vertical">
        <TextView
            android:id="@+id/tianqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="多云"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/wendu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温度 12℃"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/yunliang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="云量 91"
            android:gravity="left"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/jiangshuiliang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="降水量 0.0mm"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/fengxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风向 东北风"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/fengli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风力 2级"
            android:gravity="left"
            />


      </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"

          android:orientation="vertical">
        <TextView
            android:id="@+id/tiganwendu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="体感温度 10℃"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/xiangdushidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="相对湿度 59%"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>



        <TextView
            android:id="@+id/nengjiandu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="能见度 3KM"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/daqiyaqiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大气压强 1007HPA"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/fengsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风速 9KM/H"
            android:gravity="left"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/fengxiangjiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风向角 321"
            android:gravity="left"
            />

      </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBFC3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空气质量"
        android:textColor="#000"
       android:layout_centerInParent="true"
        android:textSize="20sp"/>
    <Button
        android:layout_alignTop="@+id/t"
        android:layout_toRightOf="@id/t"
        android:id="@+id/aqi"
        android:textSize="10dp"
        android:layout_alignBottom="@id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#70db73"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
<TextView
    android:id="@+id/pm2"
    android:text="PM2.5 122"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/pm10"
            android:text="PM10 90"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/so2"
            android:text="SO2 12"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/no2"
            android:text="NO2 111"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/co"
            android:text="CO 94"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/o3"
            android:text="O3 10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBFC3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>






  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="未来两天"
      android:gravity="center"
      android:textColor="#000"
      android:textSize="20sp"/>
  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="15dp"
     android:orientation="horizontal">
   <TextView
       android:id="@+id/data1"
       android:layout_width="0dp"
       android:layout_weight="3"
       android:layout_height="wrap_content"
       android:text="2019-11-16"
      />
   <TextView
       android:id="@+id/qing"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="晴"/>
   <TextView
       android:id="@+id/htmp"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:text="10℃"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/ltmp"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:text="2℃"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/youwufengli"
       android:layout_width="0dp"
       android:layout_weight="2"
       android:text="3级"
       android:layout_height="wrap_content"/>

 </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/data2"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="2019-11-17"
      />
    <TextView
        android:id="@+id/qing2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="晴"/>
    <TextView
        android:id="@+id/htmp2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="10℃"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ltmp2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="2℃"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/youwufengli2"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="3级"
        android:layout_height="wrap_content"/>

  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BEBFC3"/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/zhexiantu"
        android:layout_width="match_parent"
        android:layout_height="300dp"  />
</LinearLayout>

  </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>